    <div class="container">   
      <%= form_for @user, url: {action: :create} do |f| %>   
          <div>   
            <h3>Add a user</h3>   
          </div>   
          <div>   
            <p>   
              <%= "<div>#{@user.errors.full_messages.first}</div>".html_safe if @user.errors.any? %>   
            <div>   
                <label>Name</label>   
                  <%= f.text_field :name %>   
            </div>   
      
            <div>   
                 <label>age</label>   
                 <%= f.text_field :age %>   
            </div>   
      
            <div>   
               <label>palce</label>   
                  <%= f.text_field :palce %>   
            </div>   


             <div>
               <label>phone</label>
                  <%= f.text_field :phone %>
            </div>

          </p>   
          </div>   
          <div>   
            <%= link_to 'Back', { controller: 'users', action: 'index'} %>   
            <%= f.submit 'Create user' %>   
          </div>   
      <% end %>   
    </div>  
